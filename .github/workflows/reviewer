name: Auto-Assign Reviewer

on:
  pull_request:
    types:
      - opened

jobs:
  assign-reviewer:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up GitHub CLI
        uses: actions/setup-gh@v0.7.0
        with:
          gh-version: 2.1.0  # You can adjust the version as needed

      - name: Set Reviewer
        run: |
          echo "reviewer: triniha" >> $GITHUB_EVENT_PATH
          cat $GITHUB_EVENT_PATH
        shell: bash

      - name: Request Review
        run: gh pr requestreview --repo $GITHUB_REPOSITORY --number ${{ github.event.pull_request.number }} --reviewer triniha
        env:
          GH_TOKEN: ${{ secrets.TOKEN }}
